<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <AssemblyName>init</AssemblyName>
    <OutputType>Exe</OutputType>
    <TargetFramework>net7.0</TargetFramework>
    <PackageId>dotnet-init-tool</PackageId>
    <PackAsTool>true</PackAsTool>
    <ToolCommandName>init</ToolCommandName>
    <Version>0.0.3</Version>
    <Authors>Christian Sheridan</Authors>
    <RepositoryUrl>https://github.com/sheridanchris/dotnet-init</RepositoryUrl>
    <PackageLicenseExpression>MIT</PackageLicenseExpression>
  </PropertyGroup>

  <ItemGroup>
    <Compile Include="Program.fs" />
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="Fli" Version="1.10.0" />
    <PackageReference Include="FSharp.SystemCommandLine" Version="0.17.0-beta4" />
  </ItemGroup>

</Project>
